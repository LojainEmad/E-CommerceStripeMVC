@model List<ProductEntity>

<div class="container mt-4">

    @if (TempData["TransactionCancelled"] != null)
    {
        <div class="alert alert-danger text-center">
            <i class="bi bi-x-circle"></i> @TempData["TransactionCancelled"]
        </div>
    }

    <div class="mb-3">
        <a asp-controller="CheckOut" asp-action="CancelledTransaction" class="btn btn-outline-danger">
            <i class="bi bi-arrow-left-circle"></i> Back
        </a>
    </div>

    <h2 class="text-center mb-4">🛒 Your Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            Your cart is empty. <a asp-controller="Home" asp-action="Index" class="alert-link">Continue Shopping</a>
        </div>
    }
    else
    {
        <table class="table table-hover shadow-sm rounded">
            <thead class="table-primary">
                <tr>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.Title</td>
                        <td class="align-middle">$@item.Price</td>
                        <td class="align-middle"><img src="@item.Image" width="80" class="img-thumbnail" /></td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <form asp-action="CheckOut" asp-controller="CheckOut" method="post">
                <button type="submit" class="btn btn-success btn-lg px-4">
                    <i class="bi bi-credit-card"></i> Proceed to Payment
                </button>
            </form>
        </div>
    }
</div>
